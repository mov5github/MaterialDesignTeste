<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lucas.materialdesignteste.SignUp2Activity"
    tools:showIn="@layout/activity_sign_up2"
    android:layout_below="@+id/toolbar_sign_up">


    <com.example.lucas.materialdesignteste.slidingTabLayout.SlidingTabLayout
        android:id="@+id/stl_tabs_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.lucas.materialdesignteste.slidingTabLayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_tabs_sign_up"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

</LinearLayout>
